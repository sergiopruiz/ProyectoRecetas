{% extends "admin_base.njk" %}

{% block titulo %}Recetas | Admin{% endblock %}

{% block contenido %}
  <div>
  <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Titulo</th>
      <th scope="col">Editar</th>
      <th scope="col">Borrar</th>
    </tr>
  </thead>
  <tbody>
  {% for receta in recetas %}
    <tr>
      <td>{{ receta.titulo }}</td>
      <td><a href="/admin/recetas/{{ receta.id }}"><i class="fa fa-edit fa-lg"></i></a></td>
     
      <td>
        <form action="/admin/recetas/{{ receta.id }}" method="post">
          <input type="hidden" name="_method" value="delete" />
          <button type="submit" class="btn btn-danger"><span class="fa fa-trash-o fa-lg"></button>
          <a href="/admin/recetas/{{ receta.id }}"><i class="fa fa-edit fa-lg"></i></a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
      <ul class="list-group">
      {% for receta in recetas %}
          <li class="list-group-item">{{ receta.titulo }}</li>
          <a href="/admin/recetas/{{ receta.id }}"><i class="fa fa-external-link-alt"></i></a>
      {% endfor %}
      </ul>
  </div>
{% endblock %}