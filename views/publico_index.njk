{% extends "publico_base.njk" %}

{% block titulo %}Recetas | Publico{% endblock %}

{% block contenido %}
  <form action="/buscar" method="get">
    <div class="form-group pt-5">
      <input type="text" class="form-control" id="buscar" name="buscar" placeholder="Buscar receta">
    </div>
    <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></i></button>
  </form>
  <hr>
    {% if error %}
      <div class="alert alert-danger">
        {{ error }}
      </div>
    {% endif %}

  <div>
      <ul class="list-group">
      {% for receta in recetas %}
          <li class="list-group-item">{{ receta.titulo }}</li>
          <a href="/recetas/{{ receta.id }}"><i class="fa fa-external-link-alt"></i></a>
      {% endfor %}
      </ul>
  </div>
{% endblock %}